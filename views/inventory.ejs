<main role="main">
  <h1>Our Inventory</h1>

  <ul class="inventory-grid">
    <% items.forEach(item => { %>
      <li class="inventory-item">
        <h2><%= item.year %> <%= item.make %> <%= item.model %></h2>
        <p><strong>Price:</strong> $<%= item.price.toLocaleString() %></p>
        <p><strong>Mileage:</strong> <%= item.mileage.toLocaleString() %> miles</p>
        <p><strong>Color:</strong> <%= item.color %></p>
        <a class="button" href="/inventory/detail/<%= item.id %>">View Details</a>
      </li>
    <% }) %>
  </ul>
</main>

